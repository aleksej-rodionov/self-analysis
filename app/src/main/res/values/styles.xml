<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorRed</item>
        <item name="colorPrimaryVariant">@color/ACARed</item>
        <item name="colorOnPrimary">@color/colorOrangeDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorBlue</item>
        <item name="colorSecondaryVariant">@color/colorBlueDark</item>
        <item name="colorOnSecondary">@color/colorBlueLight</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
    </style>

    <style name="LightModeColors">
        <item name="bg_main">@color/ACALight</item>
        <item name="bg_beta">@color/white</item>
        <item name="text_main">@color/gray900</item>
        <item name="text_beta">@color/gray600</item>
        <item name="bg_accent">@color/colorRed</item>
    </style>

    <style name="DarkModeColors">
        <item name="bg_main">@color/gray900</item>
        <item name="bg_beta">@color/gray850</item>
        <item name="text_main">@color/gray100</item>
        <item name="text_beta">@color/gray600</item>
        <item name="bg_accent">@color/violet</item>
    </style>
</resources>
